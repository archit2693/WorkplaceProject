<p id="notice"><%= notice %></p>
<p>
<strong>Company name:</strong>
  <%= @employer.company_name %>
</p>

<p>
<strong>Average Rating</strong>
  <%= number_with_precision(@employer.average_rating, precision: 2) %>
</p>
<br>

<h3>Employees </h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employer.employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.position %></td>
        <td><%= employee.rating %></td>
        <td><%= link_to 'Edit', edit_employer_employee_path(@employer, employee) %></td>
        <td><%= link_to 'Destroy', [@employer, employee], method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_employer_employee_path(@employer) %> |
<%= link_to 'Back', employers_path %>
