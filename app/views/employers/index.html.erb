<h1>Companies names</h1>

<table>
  <thead>
    <tr>
      <th>Compnay name</th>
      <th>Average rating</th>
			<th>Number of employees rated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employers.each do |employer| %>
      <tr>
        <td><%= employer.company_name %></td>
        <td><%= number_with_precision(employer.average_rating, precision: 2)%></td>
        <td><%= employer.number_of_employees_rated%></td>
        <td><%= link_to 'Show', employer %></td>
        <td><%= link_to 'Destroy', employer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

